<h1>New Game</h1>

<%= render 'errors', errors: @errors %>

<%= form_with(model: @game, local: true) do |form| %>

  <div class="field form-group">
    <%= form.label :word, class: 'control-label' %>
    <%= form.text_field :word, id: :game_word, class: 'form-control' %>
  </div>

  <div class="field form-group">
    <%= form.label :lives, class: 'control-label' %>
    <%= form.number_field :lives, id: :game_lives, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= form.submit class: 'btn btn-default btn-block btn-sm' %>
  </div>
<% end %>

<%= link_to 'Back', games_path, class: 'btn btn-default btn-sm back-btn' %>
