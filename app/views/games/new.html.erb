<h1>New Game</h1>


<%= form_with(model: @game, local: true) do |form| %>

  <%= render 'errors', game: @game %>

  <div class="field">
    <%= form.label :word %>
    <%= form.text_field :word, id: :game_word %>
  </div>

  <div class="field">
    <%= form.label :lives %>
    <%= form.number_field :lives, id: :game_lives %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

<%= link_to 'Back', games_path %>
