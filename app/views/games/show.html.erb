  <p id="notice"><%= notice %></p>

<p>
  <strong>Word:</strong>
  <%= @game.guessed_word %>
</p>

<p>
  <strong>Guesses:</strong>
  <%= @game.guesses %>
</p>

<p>
  <strong>Lives:</strong>
  <%= @game.lives %>
</p>


<% if @game.game_won? %>
  <p>Well done, you won!</p>
<% elsif @game.game_lost? %>
  <p>Game lost! The word was <%= @game.word %></p>
<% else %>
  <%= form_with(model: @game, local: true) do |form| %>
    <% if @game.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@game.errors.count, "error") %> prohibited this game from being saved:</h2>

        <ul>
        <% @game.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= form.label "Guess a letter" %>
      <%= form.text_field :guess, id: :game_word %>
    </div>

    <div class="actions">
      <%= form.submit %>
    </div>
  <% end %>
<% end %>

