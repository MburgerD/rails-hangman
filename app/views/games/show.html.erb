<%= render 'errors', game: @game %>

<p>
  <strong>Word:</strong>
  <%= @game.guessed_word %>
</p>

<p>
  <strong>Guesses:</strong>
  <%= @game.guesses %>
</p>

<p>
  <strong>Lives:</strong>
  <%= @game.lives %>
</p>


<% unless @game.game_over? %>
  <%= form_with(model: @game, local: true, html: {class: 'form-inline'}) do |form| %>

      <%= form.label "Guess a letter", class: 'control-label' %>
      <div class="field form-group">
        <%= form.text_field :guess, id: :game_word, class: 'form-control' %>
      </div>

      <div class="actions form-group">
        <%= form.submit 'Submit', class: 'btn btn-default btn-sm'%>
      </div>
  <% end %>
<% end %>

<%= link_to 'Back', games_path, class: 'btn btn-default btn-sm' %>
