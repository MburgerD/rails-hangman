<p>
  <strong>Word:</strong>
  <%= @game.guessed_word %>
</p>

<p>
  <strong>Guesses:</strong>
  <%= @game.guesses %>
</p>

<p>
  <strong>Lives:</strong>
  <%= @game.lives %>
</p>


<% if @game.game_won? %>
<div class="alert alert-success">
  <p>Well done, you won!</p>
</div>
<% elsif @game.game_lost? %>
<div class="alert alert-danger">
  <p>Game lost! The word was <strong class='mark'><%= @game.word %></strong></p>
</div>
<% else %>
  <%= form_with(model: @game, local: true, html: {class: 'form-inline'}) do |form| %>
    <%= render 'errors', game: @game %>

    <div class="field form-group">
      <%= form.label "Guess a letter", class: 'control-label' %>
      <%= form.text_field :guess, id: :game_word, class: 'form-control' %>
    </div>

    <div class="actions form-group">
      <%= form.submit 'Submit', class: 'btn btn-default btn-sm'%>
    </div>
  <% end %>
<% end %>

<%= link_to 'Back', games_path, class: 'btn btn-default btn-sm' %>
