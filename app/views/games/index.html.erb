<p id="notice"><%= notice %></p>

<h1>Games</h1>

<table class="table">
  <thead>
    <tr>
      <th>Word</th>
      <th>Guesses</th>
      <th>Lives</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= game.guessed_word %></td>
        <td><%= game.guesses %></td>
        <td><%= game.lives %></td>
        <td><%= link_to 'Show', game, class: 'btn btn-default btn-xs'%></td>
        <td><%= link_to 'Destroy', game, class: 'btn btn-warning btn-xs', method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to new_game_path, class: 'btn btn-default btn-sm' do %>
  <i class="glyphicon glyphicon-plus"></i> New Game
<% end %>
